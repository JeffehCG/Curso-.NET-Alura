@*@{ 
    // Referenciando pagina de layout (Utilizado como uma Master Page)
    Layout = "~/Views/Shared/_Layout.cshtml";

    // Variavel já definida no arquivo _ViewStart.cshtml
}*@

<div class="hero-unit">
    <h2>Queima de Estoque</h2>
    <p>
        Promoção na seção de monitores
    </p>
</div>
<div class="row-fluid">
    @foreach (var produto in ViewBag.Produtos)
    {
        <div class="span4">
            <h2>@produto.Nome</h2>
            <p>@produto.Descricao</p>
            <p>@produto.Preco</p>
        </div>
    }
</div>
